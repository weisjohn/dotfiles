# https://gist.github.com/earthgecko/3089509#gistcomment-1623399
function randomAlphaNumeric() {
  len=${1:-"16"}
  perl -e "@c=(\"A\"..\"Z\",\"a\"..\"z\",0..9);\$p.=\$c[rand(scalar @c)] for 1..$len; print \"\$p\""
}

