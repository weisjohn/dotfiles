#!/bin/bash

# Make sure weâ€™re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# allow re-install of grep
brew tap homebrew/dupes


# better unix utils
brew install coreutils
brew install gnu-sed

# mac doesn't have `--ignore-garbage` option
brew install base64

## fix missing sha256sum and sha512sum tools
sudo ln -s /usr/local/bin/gsha256sum /usr/local/bin/sha256sum
sudo ln -s /usr/local/bin/gsha512sum /usr/local/bin/sha512sum

# Install wget with IRI support
brew install wget --enable-iri

# brew ack
brew install ack

# vscode
brew install visual-studio-code

# spark - https://github.com/holman/spark
brew install spark

# man2html - http://dcssrv1.oit.uci.edu/indiv/ehood/man2html.html
brew install man2html

# tab completion for some awesome stuff - http://meinit.nl/bash-completion-mac-os-x
brew install bash-completion

# github awesomeness
brew install hub

# install mongodb
brew install mongodb

# redis
brew install redis

# jq cli
brew install jq

# mysql
brew install mysql

# mercurial
brew install hg

# postgres
brew install postgresql

# phantomjs
brew install phantomjs

# ffmpeg
brew install ffmpeg

brew install caskroom/cask/vlc

# imagemagick
brew install imagemagick

# fswatch
brew install fswatch

# tree
brew install tree

# git-extras
brew install git-extras

# grep
brew install grep --with-default-names

# TODO: look at https://echo.co/blog/os-x-109-local-development-environment-apache-php-and-mysql-homebrew

# quick markdown preview
brew cask install qlmarkdown

# other previews
brew cask install qlstephen

# iterm2
brew cask install iterm2

# gnupg
brew install gnupg

# see https://gist.github.com/bcomnes/647477a3a143774069755d672cb395ca
brew install pinentry-mac

# mcrypt for password protecting files
brew install mcrypt

# envchain - https://github.com/sorah/envchain
brew install envchain

# 7zip
brew install p7zip

# haskell
brew install ghc

# minio client
brew install minio/stable/mc

# watch
brew install watch

# md5sum and sha1sum
brew install md5sha1sum

# bat
brew install bat

# fzf
brew install fzf

# kubectx
brew install kubectx

# k9s
brew install derailed/k9s/k9s

# Remove outdated versions from the cellar
brew cleanup
